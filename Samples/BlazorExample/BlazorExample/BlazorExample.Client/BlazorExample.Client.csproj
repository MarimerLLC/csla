<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <NoDefaultLaunchSettingsFile>true</NoDefaultLaunchSettingsFile>
    <StaticWebAssetProjectMode>Default</StaticWebAssetProjectMode>
    <UseLocalProject>true</UseLocalProject>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Csla.Blazor.WebAssembly" Version="9.0.0-R24051102" Condition="$(UseLocalProject) != true" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\..\Source\Csla.Blazor.WebAssembly\Csla.Blazor.WebAssembly.csproj" Condition="$(UseLocalProject) == true" />
    <ProjectReference Include="..\BusinessLibrary\BusinessLibrary.csproj" />
  </ItemGroup>

</Project>
