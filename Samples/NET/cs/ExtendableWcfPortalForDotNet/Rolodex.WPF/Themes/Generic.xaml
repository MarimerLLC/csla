                                    <ColumnDefinition Width="Auto" SharedSizeGroup="ComboBoxButton"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="SelectedItemBorder" Margin="{TemplateBinding Padding}" Grid.ColumnSpan="2"/>
