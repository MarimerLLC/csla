<Page
    x:Class="BasicBinding.BlankPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BasicBinding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="UserControl_Loaded">

    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
    <StackPanel>
      <TextBlock Text="Hello world" FontSize="20" Margin="5" Name="Label1"/>
      <TextBox Text="{Binding Path=Name, Mode=TwoWay}" FontSize="20" Margin="5" MinWidth="200" HorizontalAlignment="Left"/>
      <TextBox Text="{Binding Path=Name, Mode=TwoWay}" FontSize="20" Margin="5" MinWidth="200" HorizontalAlignment="Left"/>
      <Button Content="Save" Margin="5" Click="Button_Click"/>
    </StackPanel>
  </Grid>
</Page>
